@model List<FormListViewModel>
@{
    ViewData["Title"] = "Forms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Formlar</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>Form Id</th>
        <th>Form Adı</th>
        <th>Form Açıklaması</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Görüntüle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="/Form/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Form/Edit/@item.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Form/View/@item.Id" class="btn btn-secondary">Görüntüle</a></td>
        </tr>
    }
</table>
<a href="/Form/Add" class="btn btn-info">Yeni Form Oluştur</a>
